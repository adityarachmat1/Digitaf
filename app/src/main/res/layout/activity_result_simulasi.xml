<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/main_margin_top"
                android:layout_marginLeft="@dimen/main_margin_half">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back_48"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simulasi Kredit"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/primary_text"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/primary_text"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/primary_text"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"/>

                        <TextView
                            android:id="@+id/txtDealerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_light"
                            android:textColor="@color/primary_text"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/main_margin_half"
                android:paddingRight="@dimen/main_margin_half"
                android:paddingBottom="16dp"
                android:paddingTop="32dp">

                <LinearLayout
                    android:id="@+id/lyADDM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADDM"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_addm_simulasiresult"
                        android:textColor="@color/secondary_text"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TDP"
                            android:gravity="left"
                            android:padding="5dp"
                            android:textColor="@color/primary_text"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CICILAN"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:textColor="@color/primary_text"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="TENOR"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:textColor="@color/primary_text"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="10sp"/>

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_prepaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lyADDB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADDB"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_addb_simulasiresult"
                        android:textColor="@color/secondary_text"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TDP"
                            android:gravity="left"
                            android:padding="5dp"
                            android:textColor="@color/primary_text"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="CICILAN"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:textColor="@color/primary_text"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="10sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="TENOR"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:textColor="@color/primary_text"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="10sp"/>

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_onloan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>