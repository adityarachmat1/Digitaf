<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgGuy"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_guy"
        android:layout_above="@+id/cardView"
        android:layout_marginBottom="-35dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/z_button_radius_skip"
        android:text="SKIP"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_toRightOf="@+id/imgGuy"
        android:layout_above="@+id/cardView"
        android:layout_marginBottom="13dp"/>
    
    <Button
        android:id="@+id/btnNext"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/z_button_radius_next"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_toRightOf="@+id/btnSkip"
        android:layout_above="@+id/cardView"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="12dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        xmlns:card="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/overscreen_cardview_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        card:cardBackgroundColor="@color/white"
        card:cardCornerRadius="10dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:text=""
                android:fontFamily="@font/roboto_light"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>